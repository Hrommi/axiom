//- Все примеси в этом файле должны начинаться c имени блока (fab)

mixin fab(text, mods)

  //- Принимает:
  //-   text    {string} - текст
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +fab('Текст', 'some-mod')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' fab--' + modsList[i].trim();
      }
    }

  button.fab(class=allMods)&attributes(attributes)
    .fab__inner
      block
