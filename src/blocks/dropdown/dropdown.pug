//- Все примеси в этом файле должны начинаться c имени блока (dropdown)

mixin dropdown(mods)

  //- Принимает:
  //-   text    {string} - текст
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +dropdown('Текст', 'some-mod')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' dropdown--' + modsList[i].trim();
      }
    }

  a.dropdown(role="button", class=allMods)&attributes(attributes)
    .dropdown__inner
      .dropdown__text
        block
      .dropdown__icon
        svg(width="10", height="5")
          use(xlink:href="img/sprite.svg#arrow-dropdown")
